{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-spawn",
    "shell:allow-stdin-write",
    "shell:allow-kill",
    "shell:allow-open",
    "shell:allow-execute",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-exists",
    "fs:allow-read-dir",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/**",
        "$DOCUMENT/**",
        "$DOWNLOAD/**"
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://api.anthropic.com/**" }
      ]
    },
    "store:allow-get",
    "store:allow-set",
    "store:allow-delete",
    "store:allow-load",
    "store:allow-save"
  ]
}
